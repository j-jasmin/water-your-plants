<div class="container-plant-show">
  <div class="block">
  <div class="plant-information">
  <p><%= @plant.common_name %></p>
  <p>Nickname: <%= @plant.nickname %></p>
  <p>Current watering interval: <%= @plant.watering_interval %></p>
  <p>Current fertilizing interval: <%= @plant.fertilizing_interval %></p>
  <% if @plant.watering_events %>
    <% @plant.watering_events.sort{|a,b| b.date <=> a.date}.each do |watering_event| %>
      <p><%= watering_event.date.to_date.to_formatted_s(:long) %></p>
    <% end %>
  <% end %>

  <%= simple_form_for([@plant, @watering_event]) do |f| %>
    <%= f.label :date %>
    <%= f.text_field :date %>
    <%= f.submit %>
  <% end %>


  <%= link_to "#{@plant.common_name} died...", plant_path(@plant), method: :delete, data: {confirm: 'Are you sure?'} %>
  </div>
  </div>
</div>
